<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.home.HomeActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHomeToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_dealer_blue_400"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textHomeTitle"
                style="@style/woowaPro24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/shopping"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHomeShoppingCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageHomeShoppingCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/icon_shopping_cart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textHomeCartSize"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textHomeCartSize"
                    style="@style/woowaPro12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/oval_green400"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/imageHomeShoppingCart"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageHomeShoppingCart"
                    tools:text="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/skeletonHomeProducts"
            layout="@layout/skeleton_activity_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHomeToolBar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listHomeProducts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHomeToolBar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>